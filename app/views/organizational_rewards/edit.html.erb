<!-- Validation failure messages -->
<% if @organizational_reward.errors.any? %>
  <% @organizational_reward.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Organizational Reward #<%= @organizational_reward.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_organizational_reward/<%= @organizational_reward.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for organization_id -->
      <div class="form-group">
        <label for="organization_id" class="control-label">
          Organization
        </label>

        <%= select_tag(:organization_id, options_from_collection_for_select(Organization.all, :id, :created_at, @organizational_reward.organization_id), :class => "form-control") %>
      </div>

      <!-- Label and input for reward_id -->
      <div class="form-group">
        <label for="reward_id" class="control-label">
          Reward
        </label>

        <%= select_tag(:reward_id, options_from_collection_for_select(Reward.all, :id, :reward_name, @organizational_reward.reward_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Organizational Reward
      </button>
      or
      <a href="/organizational_rewards/<%= @organizational_reward.id %>">Cancel</a>
    </form>
  </div>
</div>
