<!-- Validation failure messages -->
<% if @organizational_reward.errors.any? %>
  <% @organizational_reward.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Organizational Reward</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_organizational_reward" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for organization_id -->
      <input type="hidden" name="organization_id" value="<%= current_user.id %>">

      <!-- Label and input for reward_id -->
      <div class="form-group">
        <label for="reward_id" class="control-label">
          Reward
        </label>

        <input type="text" id="reward_id" name="reward_id" placeholder="Reward" class="form-control" value="<%= @organizational_reward.reward_id %>">
      </div>

      <!-- Label and input for assigned_points -->
      <div class="form-group">
        <label for="assigned_points" class="control-label">
          Assigned points
        </label>

        <input type="text" id="assigned_points" name="assigned_points" placeholder="Assigned points" class="form-control" value="<%= @organizational_reward.assigned_points %>">
      </div>

      <button class="btn btn-success">
        Create Organizational Reward
      </button>
      or
      <a href="/organizational_rewards">Cancel</a>
    </form>
  </div>
</div>
