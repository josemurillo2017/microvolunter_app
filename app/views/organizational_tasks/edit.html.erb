<!-- Validation failure messages -->
<% if @organizational_task.errors.any? %>
  <% @organizational_task.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Organizational Task #<%= @organizational_task.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_organizational_task/<%= @organizational_task.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      
      

      <!-- Label and input for task_id -->
      <div class="form-group">
        <label for="task_id" class="control-label">
          Task
        </label>

        <input type="text" id="task_id" name="task_id" placeholder="Task" class="form-control" value="<%= @organizational_task.task_id %>">
      </div>

      <!-- Label and input for limit_tasks -->
      <div class="form-group">
        <label for="limit_tasks" class="control-label">
          Limit tasks
        </label>

        <%= select_tag(:limit_tasks, options_from_collection_for_select(Task.all, :id, :task_name, @organizational_task.limit_tasks), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Organizational Task
      </button>
      or
      <a href="/organizational_tasks/<%= @organizational_task.id %>">Cancel</a>
    </form>
  </div>
</div>
