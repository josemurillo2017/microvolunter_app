<div class="page-header">
  <h3>Volunteer #<%= @volunteer.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @volunteer.email %></dd>

      <dt>Password</dt>
      <dd><%= @volunteer.password %></dd>

      <dt>First name</dt>
      <dd><%= @volunteer.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @volunteer.last_name %></dd>

      <dt>Phone number</dt>
      <dd><%= @volunteer.phone_number %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/volunteers" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Volunteer has many volunteer_activity_logs -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Volunteer Activity Logs
      </li>

      <% @volunteer.volunteer_activity_logs.each do |volunteer_activity_log| %>
        <li class="list-group-item">
          <a href="/volunteer_activity_logs/<%= volunteer_activity_log.id %>">
            <%= volunteer_activity_log.volunteer_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/volunteer_activity_logs/<%= volunteer_activity_log.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/volunteer_activity_logs/<%= volunteer_activity_log.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_volunteer_activity_log/<%= volunteer_activity_log.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
