<div class="page-header">
  <h3>Organization #<%= @organization.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @organization.email %></dd>

      <dt>Password</dt>
      <dd><%= @organization.password %></dd>

      <dt>Name</dt>
      <dd><%= @organization.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/organizations" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Organization has many organizational_tasks -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Organizational Tasks
      </li>

      <% @organization.organizational_tasks.each do |organizational_task| %>
        <li class="list-group-item">
          <a href="/organizational_tasks/<%= organizational_task.id %>">
            <%= organizational_task.organization_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/organizational_tasks/<%= organizational_task.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/organizational_tasks/<%= organizational_task.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_organizational_task/<%= organizational_task.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Organization has many organizationalrewards -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Organizationalrewards
      </li>

      <% @organization.organizationalrewards.each do |organizational_reward| %>
        <li class="list-group-item">
          <a href="/organizational_rewards/<%= organizational_reward.id %>">
            <%= organizational_reward.organization_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/organizational_rewards/<%= organizational_reward.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/organizational_rewards/<%= organizational_reward.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_organizational_reward/<%= organizational_reward.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
